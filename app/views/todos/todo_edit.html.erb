<h3>Todo Edit</h3>

<%= form_tag("/users/todos/#{@todo.id}/update") do %>

    <b>Deadline</b>
    
    </br>
    
    <input style="text" name="deadline" id="datepicker" value="<%= @todo.deadline %>" >
    
    </br>

    <b>Title</b>
    
    </br>

    <textarea name="title"><%= @todo.title %></textarea>
    
    </br>
    
    <b>Content</b>
    
    </br>

    <textarea name="content"><%= @todo.content %></textarea>
    
    </br>
    
    <input type="submit" value="save" >
    
<% end %>